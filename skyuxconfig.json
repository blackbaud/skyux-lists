{
  "$schema": "./node_modules/@skyux/config/skyuxconfig-schema.json",
  "name": "skyux-lists",
  "mode": "easy",
  "compileMode": "aot",
  "plugins": [
    "@skyux-sdk/builder-plugin-skyux"
  ],
  "app": {
    "styles": [
      "src/app/visual-styles.scss",
      "@skyux/theme/css/sky.css"
    ]
  },
  "librarySettings": {
    "whitelistedNonPeerDependencies": [
      "dragula",
      "ng2-dragula"
    ]
  },
  "testSettings": {
    "e2e": {
      "browserSet": "speedy"
    },
    "unit": {
      "browserSet": "paranoid"
    }
  }
}
